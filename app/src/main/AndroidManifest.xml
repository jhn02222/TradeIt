<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TradeIt"
        tools:targetApi="31">

        <!-- Main Activity - Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Categories Activities -->
        <activity
            android:name=".CategoriesActivity"
            android:exported="false" />

        <activity
            android:name=".AddCategoryActivity"
            android:exported="false"
            android:parentActivityName=".CategoriesActivity" />

        <!-- Items Activities -->
        <activity
            android:name=".ItemsActivity"
            android:exported="false"
            android:parentActivityName=".CategoriesActivity" />

        <activity
            android:name=".AddItemActivity"
            android:exported="false"
            android:parentActivityName=".ItemsActivity" />

        <activity
            android:name=".MyItemsActivity"
            android:exported="false"
            android:parentActivityName=".CategoriesActivity" />

        <!-- Transactions Activities -->
        <activity
            android:name=".TransactionsActivity"
            android:exported="false"
            android:parentActivityName=".CategoriesActivity" />

        <activity
            android:name=".TransactionDetailActivity"
            android:exported="false"
            android:parentActivityName=".TransactionsActivity" />

    </application>

</manifest>